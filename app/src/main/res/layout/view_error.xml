<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/retryRoot"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:touchscreenBlocksFocus="true"
    >

    <ImageView
        android:id="@+id/retry_iv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/mala_2x"
        android:padding="@dimen/offset_10dp"
        />

    <TextView
            android:id="@+id/retry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_15dp"
            android:gravity="center"
            android:textSize="@dimen/font_16sp"
            android:textColor="@color/retry_grey"
            android:text="加载失败"
        />

    <Button
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_5dp"
            android:background="@color/transparent"
            android:textSize="@dimen/font_16sp"
            android:textColor="@color/retry_grey"
            android:text="请点击屏幕，重新加载"
        />
</LinearLayout>